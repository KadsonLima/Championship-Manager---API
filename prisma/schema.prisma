// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String

  @@map("users")
}

model Championship{
  id         Int      @id @default(autoincrement())
  name       String   @unique
  link       String   @unique
  createdAt  DateTime @default(now()) @db.Date()
  active     Boolean  @default(true)
  subscribes ChampionshipAndTeam[]

  @@map("championship")
}


model Groups{
  id      Int     @id @default(autoincrement())
  name    String  @unique
  team    Team    @relation(fields: [teamId], references: [id])
  teamId  Int

  @@map("groups")

}

model ChampionshipAndTeam{
  id      Int    @id @default(autoincrement())
  camp    Championship @relation(fields: [campId], references: [id])
  campId  Int
  team    Team @relation(fields: [teamId], references: [id])
  teamId  Int

  @@map("championshipAndTeam")
}


model Team{
  id      Int    @id @default(autoincrement())
  name    String
  lider   String @unique
  membro1 String @unique
  membro2 String @unique
  membro3 String @unique

  group Groups[]
  championship ChampionshipAndTeam[]

  @@map("team")
}