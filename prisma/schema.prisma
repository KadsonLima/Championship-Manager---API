// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {

  provider = "prisma-client-js"

}

datasource db {

  provider = "postgresql"
  url      = env("DATABASE_URL")

}


model User{

  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  notice Notice[]
  @@map("users")
}

model Championship{

  id         Int      @id @default(autoincrement())
  name       String   @unique
  link       String   @unique
  createdAt  DateTime @default(now()) @db.Date()
  active     Boolean  @default(true)
  subscribes ChampionshipAndTeam[]

  @@map("championship")

}


model Groups{
  id      Int     @id @default(autoincrement())
  name    String  @unique
  team    Team    @relation(fields: [teamId], references: [id])
  teamId  Int  @unique

  @@map("groups")

}

model ChampionshipAndTeam{

  id      Int    @id @default(autoincrement())
  camp    Championship @relation(fields: [campId], references: [id])
  campId  Int
  team    Team @relation(fields: [teamId], references: [id])
  teamId  Int

  @@map("championshipAndTeam")

}


model Team{

  id            Int    @id @default(autoincrement())
  nameTeam      String
  numberContact String @unique
  nameLeader    String @unique
  nameMember1   String @unique
  nameMember2   String @unique
  nameMember3   String @unique
  composition   TeamComposition    @relation(fields: [compositionId], references: [id])
  compositionId Int

  group Groups[]
  championship ChampionshipAndTeam[]

  @@map("team")
}

model TeamComposition{

  id      Int    @id @default(autoincrement())
  
  leader  RacesType
  
  member1 RacesType
  
  member2 RacesType
  
  member3 RacesType

  team    Team[]


  @@map("teamComposition")
}

enum RacesType {
  WR
  MG
  WB
  WF
  EA
  EP
}

model Notice{

  id         Int    @id @default(autoincrement())
  text       String
  createdAt  DateTime @default(now()) @db.Date()
  user    User @relation(fields: [userId], references: [id])
  userId  Int
  @@map("notice")

}